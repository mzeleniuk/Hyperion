<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
      <div class="page-header">
        <h2 class="text-center">All albums</h2>
      </div>

      <% if albums.any? %>
        <div id="albums">
          <ul class="cards">
            <% albums.each do |album| %>
              <li>
                <div class="album">
                  <small><%= album.year %></small>
                  <h2><%= album.title %></h2>
                  <h4><%= album.author %></h4>
                </div>
              </li>
            <% end %>
          </ul>

          <div class="clearfix"></div>
        </div>
      <% else %>
        <p class="alert alert-info">There are no albums yet.</p>
      <% end %>
    </div>
  </div>
</div>
