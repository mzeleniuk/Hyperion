<h2>Add album</h2>

<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>

    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=
  form_for :album, '/albums' do
    div class: 'input' do
      label :title
      text_field :title
    end

    div class: 'input' do
      label :author
      text_field :author
    end

    div class: 'input' do
      label :year
      number_field :year
    end

    div class: 'controls' do
      submit 'Create Album'
    end
  end
%>
