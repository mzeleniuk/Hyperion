<h2>Add album</h2>

<%=
  form_for :album, '/albums' do
    div class: 'input' do
      label :title
      text_field :title
    end

    div class: 'input' do
      label :author
      text_field :author
    end

    div class: 'input' do
      label :year
      number_field :year
    end

    div class: 'controls' do
      submit 'Create Album'
    end
  end
%>
